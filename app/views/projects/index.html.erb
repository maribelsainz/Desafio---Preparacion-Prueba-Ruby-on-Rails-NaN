<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
      <th>People</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= form_with(url: project_add_person_path(project.id), local: true) do |f| %>
        <div class="field">
        <%= f.select(:person_id, @people_for_select, prompt:'Selecciona una persona') %>
        </div>
        <div class="field">
        <div class="action">
        <%= f.submit 'Agregar' %>
        </div>
        </div>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

